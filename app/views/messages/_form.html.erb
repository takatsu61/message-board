<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <label for="message_name">名前:</label>
  <%= f.text_field :name , :class => "form-control", :placeholder => "名前" %>

  <label for="message_age">年齢:</label>
  <%= f.text_field :age , :class => "form-control", :placeholder => "年齢" %>

  <label for="message_body">内容:</label>
  <%= f.text_field :body, :class => "form-control", :rows => 3, :placeholder => "内容" %><br>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>