<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
        (<%= link_to "edit" , edit_message_path(message) %>
         <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
        )

      <br>
    <% end %>
  </div>
  <div class="panel-footer">
   <%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
    <label for="message_name">名前:</label>
      <%= f.text_field :name , :class => "form-control", :placeholder => "名前" %>
    <label for="message_body">内容:</label>
      <%= f.text_area   :body , :class => "form-control", :rows => 3 , :placeholder => "内容 "%><br>
    <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
  </div>
</div>
