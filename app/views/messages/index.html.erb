<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= form_for(@message) do |f| %>
    <label for="message_name">名前:</label>
      <%= f.text_field :name , :class => "form-control", :placeholder => "名前" %>
    <label for="message_body">内容:</label>
      <%= f.text_area   :body , :class => "form-control", :rows => 3 , :placeholder => "内容 "%><br>
    <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
  </div>
</div>